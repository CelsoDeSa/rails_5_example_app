<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>Asin</th>
      <th>Video</th>
      <th>Price</th>
      <th>Buy option amazon</th>
      <th>Description</th>
      <th>Published</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.slug %></td>
        <td><%= book.asin %></td>
        <td><%= book.video %></td>
        <td><%= book.price %></td>
        <td><%= book.buy_option_amazon %></td>
        <td><%= book.description %></td>
        <td><%= book.published %></td>
        <td><%= book.post %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

